{
  "name": "rps",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build:clean && npm run build:compile",
    "build:clean": "rimraf dist",
    "build:compile": "tsc -p src/tsconfig.json",
    "build:watch": "onchange -d 500 -k \"src/**/*.ts\" -- npm run build:compile",
    "dev": "npm run build && concurrently \"npm run build:watch\" \"npm run start:watch\"",
    "doctoc": "doctoc --github --notitle README.md",
    "start": "node ./bin/www",
    "start:watch": "cross-env DEBUG=rps:* nodemon"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "debug": "~4.3.1",
    "express": "~4.17.1",
    "morgan": "~1.10.0",
    "pug": "3.0.0",
    "stylus": "0.54.8",
    "ws": "^7.4.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.9",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.10",
    "@types/stylus": "^0.48.33",
    "@types/ws": "^7.4.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "doctoc": "^1.4.0",
    "nodemon": "^2.0.6",
    "onchange": "^7.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2"
  }
}
